name: "EmployeeServiceAPI"
basePath: "/mtls"
version: "3.14"
type: "REST"
id: "mtls-mandatory-oauth2-optional"
defaultVersion: false
endpointConfigurations:
  production:
    - endpoint: "http://backend:80/anything"
operations:
  - target: "/employee/"
    verb: "GET"
    secured: true
    scopes: []
  - target: "/employee/"
    verb: "POST"
    secured: true
    scopes: []
  - target: "/employee/{employeeId}"
    verb: "PUT"
    secured: true
    scopes: []
  - target: "/employee/{employeeId}"
    verb: "DELETE"
    secured: true
    scopes: []
authentication:
  - authType: OAuth2
    required: optional
  - authType: mTLS
    required: mandatory
    certificates:
      - name: mtls-test-configmap
        key: tls.crt
